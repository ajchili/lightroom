{
  "name": "lightroom",
  "version": "1.0.0",
  "description": "Simple web app to control Philips Hue lights.",
  "main": "src/index.ts",
  "repository": "https://github.com/ajchili/lightroom",
  "author": "Kirin Patel <kirinpatel@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clear": "rm -rf ./dist",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "yarn clear && tsc",
    "dev": "nodemon --watch src -e ts,tsx --exec yarn dev:start",
    "dev:start": "ts-node .",
    "prestart": "yarn build",
    "start": "node ./dist/index.js"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.7",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.0",
    "tsc": "^1.20150623.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
